<h1>Listing lunches</h1>

<h3>Preferred:</h3>
<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Restaurant</th>
  </tr>

<% @matches.each do |lunch| %>
  <tr>
    <td><a href="<%= lunch.link %>"><%= lunch.name %></a></td>
    <td><%= lunch.price %></td>
    <td><a href="<%= lunch.link %>"><%= lunch.restaurant %></a></td>
  </tr>
<% end %>
</table>
<h3>Others:</h3>
<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Restaurant</th>
  </tr>
<% @others.each do |lunch| %>
  <tr>
    <td><a href="<%= lunch.link %>"><%= lunch.name %></a></td>
    <td><%= lunch.price %></td>
    <td><a href="<%= lunch.link %>"><%= lunch.restaurant %></a></td>
  </tr>
<% end %>
</table>

