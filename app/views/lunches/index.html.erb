<h3>This weeks menu:</h3>
<% date = Date.today - Date.today.cwday %>
<% (1..7).each do |day| %>
  <table class="table table-striped table-bordered">
  <h4><%= (date + day).strftime('%A') %>:</h4>
  <% day_match = false %>
  <% @matches.each do |lunch| %>
    <% if lunch.date == date + day %>
      <% day_match = true %>
      <tr>
        <td><a href="<%= lunch.link %>"><%= lunch.name %></a><div class="visible-phone"><i><%= lunch.restaurant %></i></div>
        <td><%= number_to_currency(lunch.price, :separator => ",", :delimiter => "", :format => "%n") %></td>
        <td class="hidden-phone"><a href="<%= lunch.link %>"><%= lunch.restaurant %></a></td>
      </tr>
    <% end %>    
  <% end %>
  <% if !day_match %>
    <tr>
      <td>Nothing today...</td>
    </tr>
  <% end %>
  </table>
<% end %>
